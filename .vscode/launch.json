{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\backend\\src\\modules\\auth\\auth.controller.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node-terminal",
            "name": "Run Script: start:debug",
            "request": "launch",
            "command": "npm run start:debug",
            "cwd": "${workspaceFolder}\\backend"
        }
    ]
}